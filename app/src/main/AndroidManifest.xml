<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ByteCraft_City"
        tools:targetApi="31">
        <activity
            android:name=".JuegoPrincipalActivity"
            android:screenOrientation="landscape"
            android:exported="false"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".InicioActivity"
            android:screenOrientation="portrait"
            android:exported="false"
            tools:ignore="LockedOrientationActivity"/>
        <activity
            android:name=".SeleccionPartidaActivity"
            android:screenOrientation="portrait"
            android:exported="false"
            tools:ignore="LockedOrientationActivity"/>
        <activity
            android:name=".RegistroActivity"
            android:screenOrientation="portrait"
            android:exported="false"
            tools:ignore="LockedOrientationActivity"/>
        <activity
            android:name=".LoginActivity"
            android:screenOrientation="portrait"
            android:exported="false"
            tools:ignore="LockedOrientationActivity"/>
        <activity
            android:name=".SplashScreenSeleccion"
            android:screenOrientation="portrait"
            android:exported="false"
            android:theme="@android:style/Theme.DeviceDefault.NoActionBar.Fullscreen"
            tools:ignore="LockedOrientationActivity"/>
        <activity
            android:name=".SplashScreenJuego"
            android:screenOrientation="portrait"
            android:exported="false"
            android:theme="@android:style/Theme.DeviceDefault.NoActionBar.Fullscreen"
            tools:ignore="LockedOrientationActivity"/>
        <activity
            android:name=".SplashScreenInicio"
            android:screenOrientation="portrait"
            android:exported="true"
            tools:ignore="LockedOrientationActivity"
            android:theme="@android:style/Theme.DeviceDefault.NoActionBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>